<%= form_with(model: @post) do |form| %>
    <p>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </p>
    <p>
        <%= form.label :user_id %>
        <%= form.collection_select :user_id, User.all, :id, :username, include_blank: "選択して下さい" %>
    </p>
    <p>
        <%= form.label :category %>
        <%= form.collection_check_boxes :category_ids, Category.all, :id, :category_name do |c| %>
            <%= c.label(class: "checkbox-inline input_checkbox") {c.check_box(class: "checkbox") + c.text} %>
        <% end %>
    </p>

    <p>
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>